pipeline {
    agent any

    stages {
        stage('Preparation') {
            steps {
                echo 'prepare github repo....'
                git branch: 'master', url: 'https://github.com/swelams/helm'
            }
        }
        stage('SonarQube Analysis') {
            def scannerHome = tool 'SonarQube'
                withSonarQubeEnv('sonar') {
                    sh """/var/lib/jenkins/tools/hudson.plugins.sonar.SonarRunnerInstallation/SonarQube/bin/sonar-scanner \
                    -D sonar.projectVersion=1.0-SNAPSHOT \
                    -D sonar.login=admin \
                    -D sonar.password=admin \
                    -D sonar.projectBaseDir=/var/lib/jenkins/workspace/jenkins-sonar/ \
                    -D sonar.projectKey=my-app1 \
                    -D sonar.sourceEncoding=UTF-8 \
                    -D sonar.language=java \
                    -D sonar.sources=my-app/src/main \
                    -D sonar.tests=my-app/src/test \
                    -D sonar.host.url=http://192.168.59.102:31143/"""
                    }
        }

    

    }
}

 